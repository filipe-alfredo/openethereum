# REFERENCE: https://paritytech.github.io/parity-config-generator/

[parity]
chain = "FILEPATH_GENESIS"
no_persistent_txqueue = false

[account]
unlock = ["0x0000000000000000000000000000000000000001"]
password = ["FILEPATH_ACCOUNT_PASSWORD"]
fast_unlock = true

[mining]
engine_signer = "0x0000000000000000000000000000000000000001"
reseal_on_txs = "none"
usd_per_tx = "0"
usd_per_eth = "0"
reseal_max_period = 31536000000
min_gas_price = 0
force_sealing = true

[network]
discovery = false

[websockets]
interface = "0.0.0.0"
hosts = ["all"]
apis = ["all"]
origins = ["http://127.0.0.1:*", "chrome-extension://*", "moz-extension://*"]

[rpc]
interface = "0.0.0.0"
hosts = ["all"]
cors = ["all"]
apis = ["web3", "eth", "pubsub", "net", "parity", "parity_pubsub","parity_set", "parity_accounts", "rpc"]
server_threads = 8
processing_threads = 0

[misc]
logging = "own_tx,sync=debug"
